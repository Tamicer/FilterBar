<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:variablePadding="true">

    <item
        android:state_checked="false" >
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp"/>
                    <stroke android:width="0.5dp" android:color="#a3a3a3" />
                    <solid android:color="#00000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_checked="true" >
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp">

                <shape android:shape="rectangle">
                    <corners android:radius="12dp"/>
                    <stroke android:width="0.5dp" android:color="@color/btn_light_orange" />
                    <solid android:color="#00000000"/>
                </shape>

                <!--<shape android:shape="rectangle">-->
                    <!--<corners android:radius="12dp"/>-->
                    <!--<solid android:color="@color/main_blue_6281c2"/>-->
                <!--</shape>-->
            </item>
        </layer-list>
    </item>
</selector>