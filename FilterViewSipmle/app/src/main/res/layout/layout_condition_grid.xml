<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/tv_title_condition_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#333333" />

    <GridLayout
        android:id="@+id/grid_condition_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_condition_grid"
        android:columnCount="4"
        android:orientation="horizontal"/>

    <LinearLayout
        android:id="@+id/grid_condition_custom_view"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/grid_condition_grid">

    </LinearLayout>


</RelativeLayout>