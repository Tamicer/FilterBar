<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_condition_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/tv_info_condition_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_title_condition_range"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <com.tamic.widget.filter.RangeSeekBar
        android:id="@+id/bar_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/tv_title_condition_range"
        android:visibility="visible"/>


</RelativeLayout>
